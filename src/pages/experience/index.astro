---
import { GLOBAL } from "../../lib/variables";
import Layout from "../../layouts/Layout.astro";
import ExperienceSnippet from "../../components/ExperienceSnippet.astro";
import Section from "../../components/common/Section.astro";
import { experiences } from "../../lib/list";
---

<Layout>
  <Fragment slot="head">
    <title>{GLOBAL.experienceTitle} • {GLOBAL.username}</title>
    <meta
      name="description"
      content={GLOBAL.experienceLongDescription}
    />
    <meta property="og:title" content={`${GLOBAL.experienceTitle} • ${GLOBAL.username}`} />
    <meta
      property="og:description"
      content={GLOBAL.experienceShortDescription}
    />
    <meta property="og:image" content={`${GLOBAL.rootUrl}/${GLOBAL.profileImage}`} />
    <meta property="og:url" content={`${GLOBAL.rootUrl}/experience`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${GLOBAL.experienceTitle} • ${GLOBAL.username}`} />
    <meta
      name="twitter:description"
      content={GLOBAL.experienceShortDescription}
    />
    <meta name="twitter:image" content={`${GLOBAL.rootUrl}/${GLOBAL.profileImage}`} />
    <meta http-equiv="content-language" content="en" />
    <meta name="language" content="English" />
    <link rel="canonical" href={`${GLOBAL.rootUrl}/experience`} />
  </Fragment>
  <Section class="my-8">
    <div class="flex items-center gap-4 pt-8 pb-16">
      <h1 class="font-display text-3xl sm:text-4xl leading-loose">{GLOBAL.experienceName}</h1>
    </div>
    <ul>
      {
        experiences.map((experience) => (
          <li>
            <ExperienceSnippet
              company={experience.company}
              position={experience.position}
              description={experience.description}
              location={experience.location}
              type={experience.type}
              skills={experience.skills ?? []}
              companyUrl={experience.companyUrl}
              startDate={experience.startDate}
              endDate={experience.endDate}
            />
          </li>
        ))
      }
    </ul>
  </Section>
</Layout>
